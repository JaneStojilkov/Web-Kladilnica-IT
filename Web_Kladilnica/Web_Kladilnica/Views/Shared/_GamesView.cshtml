@model IEnumerable<Web_Kladilnica.Models.Game>



<table class="table table-condensed">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.Team1)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Team2)
        </th>
        <th>
            Score
        </th>
        <th>
            Time
        </th>
        <th>
            1 x 2
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Completed)
        </th>

        <th></th>
    </tr>

    @foreach (var item in Model)
    {
        var IDGame = item.ID;
        <tr>
            <td>
                <img src="@item.Team1.BadgeUrl" width="35px" height="35px" />
                @Html.DisplayFor(modelItem => item.Team1.Name)
            </td>
            <td>
                <img src="@item.Team2.BadgeUrl" width="35px" height="35px" />
                @Html.DisplayFor(modelItem => item.Team2.Name)
            </td>
            <td>
                @item.team1Score:@item.team2Score
            </td>
            <td>
                @if (item.HalfTime == true )
                {
                    <span>HT</span>
                }
                @if(item.HalfTime==false && item.Time >= 60 && !item.Completed)
                {
                    <span>@(item.Time-15)</span>
                }
                @if(item.HalfTime==false && item.Time < 60)
                {
                    <span>@item.Time</span>
                }
                @if (item.Completed)
                {
                    <span>FT</span>
                }
            </td>
            <td>
                <div class="btn-group">
                    <input type="button" value="@item.Coefficient1.ToString()" id="c1" name="@item.ID" onclick="ClickCoef()" class="btns"  />
                    <input type="button" value="@item.Coefficient2.ToString()" id="c2" name="@item.ID" onclick="ClickCoef()" class="btns" />
                    <input type="button" value="@item.Coefficient3.ToString()" id="c3" name="@item.ID" onclick="ClickCoef()" class="btns" />
                </div>
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Completed)
            </td>

            <td>
                @Html.ActionLink("Edit", "Edit", new { id = item.ID }) |
                @Html.ActionLink("Details", "Details", new { id = item.ID }) |
                @Html.ActionLink("Delete", "Delete", new { id = item.ID })
            </td>
        </tr>
    }

</table>
<script src="~/Scripts/jquery-3.3.1.min.js"></script>
<link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/3.4.0/css/bootstrap.min.css">
<script src="https://maxcdn.bootstrapcdn.com/bootstrap/3.4.0/js/bootstrap.min.js"></script>
<script>
                        $('.btns').on('click', function () {
                         $(this).addClass("btn-success").siblings().removeClass("btn-success");
                    })
</script>